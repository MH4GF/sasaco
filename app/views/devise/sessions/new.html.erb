<div class="register-container">

  <div class="register-title">
    <h2>ログインする</h2>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: 'register-field', autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, class: 'register-field', autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン", class: 'register-submit' %>
    </div>
  <% end %>

  <div class="sns-register">
    <p>SNSアカウントでログイン</p>
    <ul>
      <li>
        <%= link_to user_facebook_omniauth_authorize_path, class: "btn facebook-btn" do %>
          <i class="fab fa-facebook-f"></i>
        <% end %>
      </li>
      <li>
        <%= link_to user_twitter_omniauth_authorize_path, class: "btn twitter-btn" do %>
          <i class="fab fa-twitter"></i>
        <% end %>
      </li>
      <li>
        <%= link_to user_google_oauth2_omniauth_authorize_path, class: "btn google-btn" do %>
          <i class="fab fa-google"></i>
        <% end %>
      </li>
    </ul>
  </div>
  <div class="register-login">
    <%= link_to "会員登録はこちら", new_user_registration_path, class: 'login-link' %>
  </div>
</div>
