<div class="register-container">

  <div class="register-title">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, class: 'register-field', autofocus: true %>
    </div>

    <% if resource.provider.nil? %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: 'register-field', autocomplete: "email" %>
      </div>
    <% end %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <% if resource.provider.nil? %>
      <div class="field">
        <%= f.label :password %> <i>（パスワードを変更しない場合は空欄にしてください）</i><br />
        <%= f.password_field :password, class: 'register-field', autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em>（半角英数字<%= @minimum_password_length %>文字以上)</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, class: 'register-field', autocomplete: "new-password" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "保存する", class: 'register-submit' %>
    </div>
  <% end %>

  <div class="unregister">
    <p><%= link_to "アカウント削除", registration_path(resource_name), data: { confirm: "本当に削除してよろしいですか？" }, method: :delete, class: "unregister-link" %></p>
  </div>
  <div class="back-to-top">
    <%= link_to "Back", :back, class: "back-to-top-link" %>
  </div>
</div>
