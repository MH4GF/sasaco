<div class="post-new-container">
  <div class="post-new-title">
    <h2>投稿する</h2>
  </div>
  <% @post.errors.full_messages.each do |message| %>
    <div class="form-error">
      <%= message %>
    </div>
  <% end %>
  <%= form_for @post do |f| %>
    <div class="form-group">
      <%= f.label :image %>
      <%= f.file_field :image %>
    </div>

    <div class="form-group">
      <p><%= f.label :content %></p>
      <%= f.text_area :content, class: 'post-form' %>
    </div>

    <%= f.submit '投稿', class: 'post-submit' %>

  <% end %>
</div>
